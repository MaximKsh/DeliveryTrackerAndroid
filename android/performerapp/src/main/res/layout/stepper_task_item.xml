<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_border_ltgray"
    android:padding="15dp"
    android:layout_marginTop="-30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/stepperTaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:text="Доставка пончиков"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/stepperTaskPredictedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_shape"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="13:50"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/stepperTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stepperTaskName"
        android:text="Важно доставить как можно быстрее" />

    <TextView
        android:id="@+id/stepperTaskAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/stepperTaskDescription"
        android:text="Улица петухова 26" />

    <Button
        android:id="@+id/stepperTaskGoToMarker"
        android:layout_width="wrap_content"
        android:background="@color/light_gray"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stepperTaskAddress"
        android:text="На карте" />

    <Button
        android:id="@+id/stepperTaskGoToDetails"
        android:layout_width="wrap_content"
        android:background="@color/light_gray"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/stepperTaskAddress"
        android:text="Подробнее" />
</RelativeLayout>