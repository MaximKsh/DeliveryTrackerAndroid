<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kvteam.deliverytracker.performerapp.ui.confirm.ConfirmDataActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/etConfirmSurname"
            android:text="@string/PerformerApp_ConfirmDataActivity_Surname" />
        <EditText
            android:id="@+id/etConfirmSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textPersonName" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/etConfirmName"
            android:text="@string/PerformerApp_ConfirmDataActivity_Name" />
        <EditText
            android:id="@+id/etConfirmName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textPersonName" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/etConfirmPhoneNumber"
            android:text="@string/PerformerApp_ConfirmDataActivity_PhoneNumber" />
        <EditText
            android:id="@+id/etConfirmPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="phone" />

        <Button
            android:id="@+id/bttnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/PerformerApp_ConfirmDataActivity_ConfirmButton" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvConfirmError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/errorText"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="" />
</RelativeLayout>
