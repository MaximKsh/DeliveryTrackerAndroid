<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/llCurrentPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="8dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:text="@string/Core_OldPassword"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:labelFor="@id/etOldPassword"
                android:textColor="@color/colorGray"/>
            <EditText
                android:id="@+id/etOldPassword"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/selector_edit_text"
                android:theme="@style/EditTextTheme"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@id/llCurrentPassword"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="8dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:text="@string/Core_NewPassword"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:labelFor="@id/etNewPassword"
                android:textColor="@color/colorGray"/>
            <EditText
                android:id="@+id/etNewPassword"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/selector_edit_text"
                android:theme="@style/EditTextTheme"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@id/llNewPassword"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="8dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:text="@string/Core_ConfirmNewPassword"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:labelFor="@id/etConfirmPassword"
                android:textColor="@color/colorGray"/>
            <EditText
                android:id="@+id/etConfirmPassword"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/selector_edit_text"
                android:theme="@style/EditTextTheme"
                android:textSize="18sp"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>