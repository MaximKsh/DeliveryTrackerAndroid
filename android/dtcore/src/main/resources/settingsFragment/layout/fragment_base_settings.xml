<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/svMainScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.kvteam.deliverytracker.core.ui.settings.BaseSettingsFragment">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivUserAvatar"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_margin="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/Core_AvatarDesc"/>

                <TextView
                    android:id="@+id/tvSurnameNamePatronymic"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:layout_below="@id/ivUserAvatar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/tvInfoHeader"
                    android:layout_below="@id/tvSurnameNamePatronymic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Core_InfoGroup"
                    android:gravity="bottom"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    />

                <FrameLayout
                    android:id="@+id/flInstance"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_item_height"
                    android:foreground="?selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/tvInfoHeader">
                    <!-- парент дает эффект выделения -->
                    <LinearLayout
                        android:id="@+id/llInstance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:background="@drawable/shape_bottom_border_ltgray"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">
                        <TextView
                            android:layout_width="match_parent"
                            android:text="@string/Core_Instance"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/colorGray"/>
                        <TextView
                            android:id="@+id/tvInstance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:textSize="18sp"/>
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/flAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_item_height"
                    android:foreground="?selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_below="@id/flInstance">
                    <!-- парент дает эффект выделения -->
                    <LinearLayout
                        android:id="@+id/llPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:background="@drawable/shape_bottom_border_ltgray"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">
                        <TextView
                            android:layout_width="match_parent"
                            android:text="@string/Core_YourPhone"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/colorGray"/>
                        <TextView
                            android:id="@+id/tvPhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:textSize="18sp"/>
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/flCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_below="@id/flAddress">

                    <!-- парент дает эффект выделения -->
                    <LinearLayout
                        android:id="@+id/llCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/shape_bottom_border_ltgray"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="15dp"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">
                        <TextView
                            android:layout_width="match_parent"
                            android:text="@string/Core_YourCode"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/colorGray"/>
                        <TextView
                            android:id="@+id/tvCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"/>
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/flDelimiterInfoSettings"
                    android:layout_below="@id/flCode"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="?android:attr/windowBackground" />
                <FrameLayout
                    android:id="@+id/flDelimiterInfoSettingsBorder"
                    android:layout_below="@id/flDelimiterInfoSettings"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/shape_bottom_border_ltgray"
                    />

                <TextView
                    android:id="@+id/tvSettingsHeader"
                    android:layout_below="@id/flDelimiterInfoSettingsBorder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Core_SettingsGroup"
                    android:gravity="bottom"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    />

                <LinearLayout
                    android:id="@+id/llSettingsExtension"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvSettingsHeader"
                    android:orientation="vertical"/>

                <FrameLayout
                    android:id="@+id/flEditSettings"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_item_height"
                    android:background="@drawable/shape_bottom_border_ltgray"
                    android:layout_below="@id/llSettingsExtension">
                    <TextView
                        android:id="@+id/tvEditSettings"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Core_EditProfile"
                        android:gravity="center_vertical"
                        android:background="?selectableItemBackground"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textSize="18sp"/>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/flChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_item_height"
                    android:background="@drawable/shape_bottom_border_ltgray"
                    android:layout_below="@id/flEditSettings">
                    <TextView
                        android:id="@+id/tvChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Core_ChangePassword"
                        android:gravity="center_vertical"
                        android:background="?selectableItemBackground"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textSize="18sp"/>
                </FrameLayout>


                <FrameLayout
                    android:id="@+id/flLogout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_item_height"
                    android:layout_below="@id/flChangePassword">
                    <TextView
                        android:id="@+id/tvLogout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Core_Logout"
                        android:gravity="center_vertical"
                        android:background="?selectableItemBackground"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textSize="18sp"/>
            </FrameLayout>
            </RelativeLayout>
</ScrollView>
