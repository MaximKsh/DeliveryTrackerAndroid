<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kvteam.deliverytracker.core.ui.settings.BaseSettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivUserAvatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:contentDescription=""/>

                <TextView
                    android:id="@+id/tvHeader"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:layout_toEndOf="@id/ivUserAvatar"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvSurname"
                    android:textSize="18sp"
                    android:layout_below="@id/tvHeader"
                    android:layout_toEndOf="@id/ivUserAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/tvName"
                    android:textSize="18sp"
                    android:layout_toEndOf="@id/ivUserAvatar"
                    android:layout_below="@id/tvSurname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/tvPatronymic"
                    android:textSize="18sp"
                    android:layout_toEndOf="@id/ivUserAvatar"
                    android:layout_below="@id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/tvPhoneNumber"
                    android:textSize="18sp"
                    android:layout_toEndOf="@id/ivUserAvatar"
                    android:layout_below="@id/tvPatronymic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="100dp">

        <Button
            android:id="@+id/bttnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="logout" />
    </LinearLayout>



</LinearLayout>
