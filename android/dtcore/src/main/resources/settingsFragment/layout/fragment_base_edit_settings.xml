<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivUserAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="45dp"
                android:layout_alignParentStart="true"
                android:contentDescription=""/>

            <TextView
                android:id="@+id/tvHeader"
                android:textAlignment="center"
                android:textSize="22sp"
                android:layout_toEndOf="@id/ivUserAvatar"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etSurnameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_below="@id/tvHeader"
                android:layout_toEndOf="@id/ivUserAvatar"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etNameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_toEndOf="@id/ivUserAvatar"
                android:layout_below="@id/etSurnameField"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etPatronymicField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_toEndOf="@id/ivUserAvatar"
                android:layout_below="@id/etNameField"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etPhoneNumberField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ivUserAvatar"
                android:layout_below="@id/etPatronymicField"
                android:ems="10"
                android:inputType="phone" />

            <EditText
                android:id="@+id/etOldPasswordField"
                android:hint="Old password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etPhoneNumberField"
                android:ems="10"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/etPasswordField"
                android:hint="New password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etOldPasswordField"
                android:ems="10"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/etConfirmPasswordField"
                android:hint="Confirm password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etPasswordField"
                android:ems="10"
                android:inputType="textPassword" />


        </RelativeLayout>

</ScrollView>