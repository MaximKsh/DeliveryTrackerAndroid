<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlSelectedPerformer"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingTop="5dp"
    android:paddingBottom="10dp"
    >

    <ImageView
        android:id="@+id/ivUserAvatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/ManagerApp_UserListFragment_UserAvatarContentDesc" />

    <ImageView
        android:id="@+id/ivOnlineStatus"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="2dp"
        android:layout_toEndOf="@id/ivUserAvatar"
        android:contentDescription="@string/ManagerApp_UserListFragment_OnlineStatusContentDesc"
        android:src="@drawable/shape_circle" />

    <TextView
        android:id="@+id/tvPerformerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/ivOnlineStatus"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/tvPerformerName"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>