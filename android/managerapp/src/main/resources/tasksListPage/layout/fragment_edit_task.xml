<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svEditTask"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTaskInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:text="General info"
            android:background="@drawable/shape_bottom_border"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/rlTaskInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTaskInfo"
            android:background="@color/colorWhite"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/rlTaskNumber"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:paddingBottom="15dp"
                android:background="@drawable/shape_bottom_border_ltgray"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/etTaskNumber"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:hint="@string/ManagerApp_AddTaskFragment_Number"
                    android:paddingEnd="45dp"
                    android:paddingStart="45dp"
                    android:theme="@style/EditTextTheme" />


                <ImageView
                    android:id="@+id/ivTaskNumberHintIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="13dp"
                    android:alpha="0.3"
                    android:contentDescription="@string/Core_CodeHintIcon"
                    android:src="@drawable/ic_tasks_black_24dp" />

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/llDeliveryDateContainer"
                android:layout_below="@id/rlTaskNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/llDeliveryTimeContainer"
                android:layout_below="@id/llDeliveryDateContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:background="@drawable/shape_bottom_border_ltgray" />

            <FrameLayout
                android:id="@+id/llReceiptAtContainer"
                android:layout_below="@id/llDeliveryTimeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:background="@drawable/shape_bottom_border_ltgray"/>

            <FrameLayout
                android:id="@+id/llPaymentTypesContainer"
                android:layout_below="@id/llReceiptAtContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:background="@drawable/shape_bottom_border_ltgray" />

            <FrameLayout
                android:id="@+id/llPerformerSelectionContainer"
                android:layout_below="@id/llPaymentTypesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/llSelectedPerformer"
                android:layout_below="@id/llPerformerSelectionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:background="@drawable/shape_bottom_border_ltgray">
                <include layout="@layout/selected_performer_item" />
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/rlTaskComment"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/llSelectedPerformer"
                android:paddingBottom="15dp"
                android:background="@drawable/shape_bottom_border_ltgray"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/etTaskComment"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:hint="Task comment"
                    android:paddingEnd="45dp"
                    android:paddingStart="45dp"
                    android:theme="@style/EditTextTheme" />


                <ImageView
                    android:id="@+id/ivTaskCommentHintIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="13dp"
                    android:alpha="0.3"
                    android:contentDescription="@string/Core_CodeHintIcon"
                    android:src="@drawable/ic_tasks_black_24dp" />

            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvTaskProductsInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlTaskInfo"
            android:padding="10dp"
            android:text="Products info"
            android:background="@drawable/shape_bottom_border"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/llSelectedProduct"
            android:orientation="vertical"
            android:layout_below="@id/tvTaskProductsInfo"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:text="Select product"
                android:id="@+id/tvSelectProduct"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvTotalProductsPriceLabel"
            android:gravity="end"
            android:layout_below="@+id/llSelectedProduct"
            android:layout_toStartOf="@id/tvTotalProductsPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:textSize="18sp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            android:text="Total cost:"/>

        <TextView
            android:id="@+id/tvTotalProductsPrice"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/llSelectedProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="18sp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            android:text="0"/>

        <View
            android:id="@+id/vBottomBorder"
            android:layout_below="@id/tvTotalProductsPrice"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/shape_bottom_border_ltgray" />

        <TextView
            android:id="@+id/tvTaskClientInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vBottomBorder"
            android:padding="10dp"
            android:text="Client info"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/rlTaskClientInfo"
            android:background="@color/colorWhite"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTaskClientInfo">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rlTaskClient"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/etTaskClient"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:hint="AUTOCOMPLITE CLIENT AND CREATION"
                    android:paddingEnd="45dp"
                    android:paddingStart="45dp"
                    android:theme="@style/EditTextTheme" />


                <ImageView
                    android:id="@+id/ivTaskClientHintIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="13dp"
                    android:alpha="0.3"
                    android:contentDescription="@string/Core_CodeHintIcon"
                    android:src="@drawable/ic_tasks_black_24dp" />

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>