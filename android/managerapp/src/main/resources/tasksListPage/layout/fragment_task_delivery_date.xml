<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvInfoPartName"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery info"/>

        <TextView
            android:id="@+id/tvDateLabel"
            android:layout_below="@+id/tvInfoPartName"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:textColor="@color/colorGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"/>

        <org.angmarch.views.NiceSpinner
            android:id="@+id/spinnerDeliveryDate"
            android:layout_below="@+id/tvDateLabel"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            app:textTint="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCustomDate"
            android:layout_below="@+id/spinnerDeliveryDate"
            android:visibility="gone"
            android:background="@drawable/rounded_shape"
            android:textSize="16sp"
            android:textColor="@color/colorGray"
            android:paddingTop="3.5dp"
            android:paddingBottom="3.5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvTimeLabel"
            android:layout_below="@+id/tvCustomDate"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:textColor="@color/colorGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time interval"/>

        <org.angmarch.views.NiceSpinner
            android:id="@+id/spinnerDeliveryTime"
            android:layout_below="@+id/tvTimeLabel"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            app:textTint="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCustomTime"
            android:visibility="gone"
            android:layout_below="@+id/spinnerDeliveryTime"
            android:background="@drawable/rounded_shape"
            android:textSize="16sp"
            android:textColor="@color/colorGray"
            android:paddingTop="3.5dp"
            android:paddingBottom="3.5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</ScrollView>