<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llCreateInstanceMainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.kvteam.deliverytracker.managerapp.ui.createinstance.CreateInstanceActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <include
                layout="@layout/toolbar"
                app:layout_collapseMode="pin" />


    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvInfoHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Core_CompanyInfoGroup"
                android:gravity="bottom"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/Core_CompanyName"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:labelFor="@id/etCompanyName"
                    android:textColor="@color/colorGray"/>
                <EditText
                    android:id="@+id/etCompanyName"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/selector_edit_text"
                    android:theme="@style/EditTextTheme"
                    android:textSize="18sp"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="?android:attr/windowBackground" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/shape_bottom_border_ltgray"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Core_CreatorInfoGroup"
                android:gravity="bottom"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                />

            <LinearLayout
                android:id="@+id/llSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/Core_Surname"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:labelFor="@id/etSurname"
                    android:textColor="@color/colorGray"/>
                <EditText
                    android:id="@+id/etSurname"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/selector_edit_text"
                    android:theme="@style/EditTextTheme"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/Core_Name"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:labelFor="@id/etName"
                    android:textColor="@color/colorGray"/>
                <EditText
                    android:id="@+id/etName"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/selector_edit_text"
                    android:theme="@style/EditTextTheme"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPatronymic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/Core_Patronymic"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:labelFor="@id/etPatronymic"
                    android:textColor="@color/colorGray"/>
                <EditText
                    android:id="@+id/etPatronymic"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/selector_edit_text"
                    android:theme="@style/EditTextTheme"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/Core_YourPhone"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:labelFor="@id/etPhoneNumber"
                    android:textColor="@color/colorGray"/>

                <br.com.sapereaude.maskedEditText.MaskedEditText
                    android:id="@+id/etPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:typeface="monospace"
                    android:backgroundTint="@color/selector_edit_text"
                    android:theme="@style/EditTextTheme"
                    android:textSize="18sp"
                    mask:allowed_chars="1234567890"
                    mask:mask="+7(###)###-##-##" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/Core_Password"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:labelFor="@id/etPassword"
                    android:textColor="@color/colorGray"/>
                <EditText
                    android:id="@+id/etPassword"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/selector_edit_text"
                    android:theme="@style/EditTextTheme"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
