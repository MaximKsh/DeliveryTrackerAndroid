<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llCreateInstanceMainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.kvteam.deliverytracker.managerapp.ui.createinstance.CreateInstanceActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <include
                layout="@layout/toolbar"
                app:layout_collapseMode="pin" />


    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="30dp">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/etCompanyNameField"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:hint="@string/ManagerApp_CreateInstanceActivity_InstanceNameHint"
                    android:inputType="textPersonName"
                    android:paddingEnd="45dp"
                    android:paddingStart="45dp"
                    android:theme="@style/EditTextTheme" />


                <ImageView
                    android:id="@+id/ivBusinessHintIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="13dp"
                    android:alpha="0.3"
                    android:contentDescription="@string/ManagerApp_CodeHintIcon"
                    android:src="@drawable/ic_business_black_24dp" />

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/etNameField"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:hint="@string/ManagerApp_EnterNameHint"
                    android:inputType="textPersonName"
                    android:paddingEnd="45dp"
                    android:paddingStart="45dp"
                    android:theme="@style/EditTextTheme" />


                <ImageView
                    android:id="@+id/ivNameHintIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="13dp"
                    android:alpha="0.3"
                    android:contentDescription="@string/ManagerApp_CodeHintIcon"
                    android:src="@drawable/ic_assignment_ind_black_24dp" />

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/etSurnameField"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:hint="@string/ManagerApp_EnterSurnameHint"
                    android:inputType="textPersonName"
                    android:paddingEnd="45dp"
                    android:paddingStart="45dp"
                    android:theme="@style/EditTextTheme" />


                <ImageView
                    android:id="@+id/ivSurnameHintIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="13dp"
                    android:alpha="0.3"
                    android:contentDescription="@string/ManagerApp_CodeHintIcon"
                    android:src="@drawable/ic_assignment_ind_black_24dp" />

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/etPatronymicField"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:hint="@string/ManagerApp_EnterPatronymicHint"
                    android:inputType="textPersonName"
                    android:paddingEnd="45dp"
                    android:paddingStart="45dp"
                    android:theme="@style/EditTextTheme" />


                <ImageView
                    android:id="@+id/ivPatronymicHintIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="13dp"
                    android:alpha="0.3"
                    android:contentDescription="@string/ManagerApp_CodeHintIcon"
                    android:src="@drawable/ic_assignment_ind_black_24dp" />

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center">

                <br.com.sapereaude.maskedEditText.MaskedEditText
                    android:id="@+id/etPhoneNumberField"
                    android:layout_width="match_parent"
                    android:paddingStart="45dp"
                    android:paddingEnd="45dp"
                    android:layout_height="60dp"
                    android:inputType="phone"
                    android:typeface="monospace"
                    mask:allowed_chars="1234567890"
                    mask:mask="+7(###)###-##-##"
                    />


                <ImageView
                    android:id="@+id/ivPhoneNumberHintIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="13dp"
                    android:alpha="0.3"
                    android:contentDescription="@string/ManagerApp_CodeHintIcon"
                    android:src="@drawable/ic_phone_black_24dp" />

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/etPasswordField"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:hint="@string/ManagerApp_LoginActivity_EnterPasswordHint"
                    android:inputType="textPassword"
                    android:paddingEnd="45dp"
                    android:paddingStart="45dp"
                    android:theme="@style/EditTextTheme" />


                <ImageView
                    android:id="@+id/ivPasswordHintIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="13dp"
                    android:alpha="0.3"
                    android:contentDescription="@string/ManagerApp_CodeHintIcon"
                    android:src="@drawable/ic_lock_black_24dp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
