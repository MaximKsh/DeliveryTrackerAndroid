<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="30dp">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/etNameField"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="@string/ManagerApp_EnterNameHint"
                android:inputType="textPersonName"
                android:paddingEnd="45dp"
                android:paddingStart="45dp"
                android:theme="@style/EditTextTheme" />


            <ImageView
                android:id="@+id/ivNameHintIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="13dp"
                android:alpha="0.3"
                android:contentDescription="@string/ManagerApp_CodeHintIcon"
                android:src="@drawable/ic_assignment_ind_black_24dp" />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/etSurnameField"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="@string/ManagerApp_EnterSurnameHint"
                android:inputType="textPersonName"
                android:paddingEnd="45dp"
                android:paddingStart="45dp"
                android:theme="@style/EditTextTheme" />


            <ImageView
                android:id="@+id/ivSurnameHintIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="13dp"
                android:alpha="0.3"
                android:contentDescription="@string/ManagerApp_CodeHintIcon"
                android:src="@drawable/ic_assignment_ind_black_24dp" />
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/etPatronymicField"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="@string/ManagerApp_EnterPatronymicHint"
                android:inputType="textPersonName"
                android:paddingEnd="45dp"
                android:paddingStart="45dp"
                android:theme="@style/EditTextTheme" />


            <ImageView
                android:id="@+id/ivPatronymicHintIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="13dp"
                android:alpha="0.3"
                android:contentDescription="@string/ManagerApp_CodeHintIcon"
                android:src="@drawable/ic_assignment_ind_black_24dp" />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/etPhoneNumberField"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="@string/ManagerApp_EnterPhoneNumberHint"
                android:inputType="phone"
                android:paddingEnd="45dp"
                android:paddingStart="45dp"
                android:theme="@style/EditTextTheme" />


            <ImageView
                android:id="@+id/ivPhoneNumberHintIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="13dp"
                android:alpha="0.3"
                android:contentDescription="@string/ManagerApp_CodeHintIcon"
                android:src="@drawable/ic_phone_black_24dp" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Addresses" />

        <LinearLayout
            android:id="@+id/llAddressesContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvAddAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add address"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>