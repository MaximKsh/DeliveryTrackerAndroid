<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tvNameField"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="@string/Core_EnterNameHint"
            android:gravity="center_vertical"
            android:paddingEnd="45dp"
            android:paddingStart="45dp"
            android:theme="@style/EditTextTheme" />


        <ImageView
            android:id="@+id/ivNameFieldHintIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="13dp"
            android:alpha="0.3"
            android:contentDescription="@string/Core_CodeHintIcon"
            android:src="@drawable/ic_assignment_ind_black_24dp" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tvAddressField"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="@string/ManagerApp_AddTaskFragment_Address"
            android:paddingEnd="45dp"
            android:paddingStart="45dp"
            android:gravity="center_vertical"
            android:theme="@style/EditTextTheme" />


        <ImageView
            android:id="@+id/ivAddressFieldHintIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="13dp"
            android:alpha="0.3"
            android:contentDescription="@string/Core_CodeHintIcon"
            android:src="@drawable/ic_location_on_black_24dp" />

    </RelativeLayout>

</LinearLayout>