<RelativeLayout
    android:id="@+id/rlContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/llName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/etNameField"
            android:text="@string/Core_WarehouseTitle"
            android:textColor="@color/colorGray"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etNameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/selector_edit_text"
            android:inputType="textCapSentences"
            android:textSize="15sp"
            android:theme="@style/EditTextTheme" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/llWarehouseAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llName"
        android:paddingBottom="8dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">

        <TextView
            android:id="@+id/tvAddressLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/etAddressField"
            android:text="@string/Core_WarehouseAddress"
            android:textColor="@color/colorGray"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etAddressField"
            android:layout_below="@id/tvAddressLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/selector_edit_text"
            android:gravity="top"
            android:paddingEnd="30dp"
            android:inputType="textCapWords"
            android:minLines="4"
            android:textSize="15sp"
            android:theme="@style/EditTextTheme" />

        <ImageView
            android:id="@+id/ivDeleteTextIcon"
            android:visibility="gone"
            android:layout_below="@id/tvAddressLabel"
            android:layout_alignParentEnd="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:alpha="0.2"
            android:src="@drawable/ic_clear_black_24dp"/>
    </RelativeLayout>
</RelativeLayout>