<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/flSurname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true">
            <!-- парент дает эффект выделения -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/shape_bottom_border_ltgray"
                android:orientation="vertical"
                tools:ignore="UselessParent">
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/Core_Surname"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/colorGray"/>
                <TextView
                    android:id="@+id/tvSurnameField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="18sp"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/flName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_below="@id/flSurname">
            <!-- парент дает эффект выделения -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/shape_bottom_border_ltgray"
                android:orientation="vertical"
                tools:ignore="UselessParent">
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/Core_Name"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/colorGray"/>
                <TextView
                    android:id="@+id/tvNameField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="18sp"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/flPatronymic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_below="@id/flName">
            <!-- парент дает эффект выделения -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/shape_bottom_border_ltgray"
                android:orientation="vertical"
                tools:ignore="UselessParent">
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/Core_Patronymic"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/colorGray"/>
                <TextView
                    android:id="@+id/tvPatronymicField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="18sp"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/flPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_below="@id/flPatronymic">
            <!-- парент дает эффект выделения -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/shape_bottom_border_ltgray"
                android:orientation="vertical"
                tools:ignore="UselessParent">
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/Core_YourPhone"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/colorGray"/>
                <TextView
                    android:id="@+id/tvPhoneNumberField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="18sp"/>
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/tvAddressesHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flPhoneNumber"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="@string/Core_Addresses"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/llAddressesContainer"
            android:orientation="vertical"
            android:layout_below="@id/tvAddressesHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

    </RelativeLayout>

</ScrollView>