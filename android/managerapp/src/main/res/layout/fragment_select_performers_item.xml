<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llSelectPerformerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvAvailablePerformerSurname"
            android:text="Петров"
            android:textSize="12pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"/>
        <TextView
            android:id="@+id/tvAvailablePerformerName"
            android:text="Иван"
            android:textSize="12pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvAvailablePerformerPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:text="+ 7925 312 10 82" />

    <TextView
        android:id="@+id/tvAvailablePerformerAddress"
        android:text="1600 Amphitheatre Parkway Mountain View, CA 94043"
        android:autoLink="map"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>


